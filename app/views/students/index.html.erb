<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class ='table table-bordered ' style="background-image: url(<%= image_path 'bk1.jpg'%>);">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sid</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.sid %></td>
        <td><%= student.contact %></td>
        <td>
        <% if student.book.present? %>
        <%= student.book.name%>
        <%end%></td>

        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
